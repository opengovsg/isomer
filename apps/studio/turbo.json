{
  "$schema": "https://turbo.build/schema.json",
  "extends": ["//"],
  "tasks": {
    "test:unit": {
      "dependsOn": ["generate"]
    },
    "test-ci:e2e": {
      "dependsOn": ["build"]
    },
    "generate": {
      "inputs": ["prisma/schema.prisma"],
      "cache": false
    },
    "build:theme": {},
    "build": {
      "dependsOn": ["generate", "build:theme", "^build"],
      "outputs": [".next/**", "!.next/cache/**"]
    }
  }
}
