{
  "name": "@opengovsg/isomer-components",
  "publishConfig": {
    "registry": "https://npm.pkg.github.com/isomerpages"
  },
  "version": "0.0.13",
  "description": "Isomer component library",
  "scripts": {
    "rollup": "rollup -c",
    "storybook": "storybook dev -p 6006",
    "dev": "tsc -w",
    "build-storybook": "storybook build",
    "publish-package": "rollup -c && npm run publish",
    "prebuild": "rimraf dist",
    "build": "run-p build:* && npm pack",
    "build:main": "tsc -p tsconfig.build.json && tsc-alias -p tsconfig.build.json",
    "build:module": "tsc -p tsconfig.module.build.json && tsc-alias -p tsconfig.module.build.json",
    "chromatic": "npx chromatic --project-token=$CHROMATIC_PROJECT_TOKEN",
    "clean": "git clean -xdf .turbo node_modules dist",
    "format": "prettier --check . --ignore-path ../../.gitignore",
    "format:fix": "prettier --write . --ignore-path ../../.gitignore",
    "lint": "eslint",
    "lint:fix": "eslint --fix",
    "typecheck": "tsc --noEmit --emitDeclarationOnly false"
  },
  "author": {
    "name": "Isomer Team"
  },
  "license": "ISC",
  "devDependencies": {
    "@isomer/eslint-config": "*",
    "@isomer/prettier-config": "*",
    "@isomer/storybook-config": "*",
    "@isomer/tsconfig": "*",
    "@storybook/addon-a11y": "^8.1.10",
    "@storybook/addon-essentials": "^8.1.10",
    "@storybook/addon-interactions": "^8.1.10",
    "@storybook/addon-links": "^8.1.10",
    "@storybook/addon-onboarding": "^8.0.9",
    "@storybook/addon-themes": "^8.1.10",
    "@storybook/addon-viewport": "^8.0.9",
    "@storybook/blocks": "^8.1.10",
    "@storybook/react": "^8.1.10",
    "@storybook/react-vite": "^8.0.9",
    "@storybook/test": "^8.1.10",
    "@types/dompurify": "^3.0.5",
    "@types/lunr": "^2.3.7",
    "@types/react": "^18.3.3",
    "@vitejs/plugin-react": "^4.3.1",
    "autoprefixer": "^10.4.19",
    "bootstrap-icons": "^1.11.3",
    "chromatic": "^11.5.3",
    "eslint": "^9.6.0",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.4.39",
    "prettier": "^3.3.2",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "rollup": "^4.9.4",
    "rollup-plugin-dts": "^6.1.1",
    "storybook": "^8.1.10",
    "tailwindcss": "^3.4.4",
    "tsc-alias": "^1.8.10",
    "tslib": "^2.6.3",
    "typescript": "5.2.2",
    "vite": "^5.3.3"
  },
  "main": "dist/cjs/index.js",
  "module": "dist/esm/index.js",
  "exports": {
    ".": {
      "import": "./dist/esm/index.js",
      "require": "./dist/cjs/index.js"
    },
    "./templates/classic": {
      "import": "./dist/esm/templates/classic/index.js",
      "require": "./dist/cjs/templates/classic/index.js"
    },
    "./templates/next": {
      "import": "./dist/esm/templates/next/index.js",
      "require": "./dist/cjs/templates/next/index.js"
    }
  },
  "files": [
    "dist/cjs",
    "dist/esm",
    "!**/*.spec.*",
    "!**/*.stories.*",
    "!**/*.json",
    "README.md"
  ],
  "types": "dist/cjs/index.d.ts",
  "peerDependencies": {
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "dependencies": {
    "@govtechsg/sgds": "^2.3.3",
    "@govtechsg/sgds-react": "^2.5.1",
    "@headlessui/react": "^2.1.2",
    "@sinclair/typebox": "^0.32.34",
    "isomorphic-dompurify": "^2.12.0",
    "js-base64": "^3.7.7",
    "js-md5": "^0.8.3",
    "lodash": "^4.17.21",
    "markdown-to-jsx": "^7.4.7",
    "minisearch": "^6.3.0",
    "react-aria": "^3.34.1",
    "react-aria-components": "^1.3.1",
    "react-focus-on": "^3.9.3",
    "react-icons": "^5.2.0",
    "tailwind-merge": "^2.4.0",
    "tailwind-variants": "^0.2.1",
    "tailwindcss-react-aria-components": "^1.1.4",
    "type-fest": "^4.23.0",
    "usehooks-ts": "^3.1.0"
  },
  "prettier": "@isomer/prettier-config"
}
