{
  "name": "@isomer/db",
  "version": "0.0.0",
  "main": "./index.ts",
  "types": "./index.ts",
  "scripts": {
    "studio": "dotenv -e ../../.env prisma studio --port 5556",
    "type-check": "tsc",
    "test": "dotenv -e ../../.env.test -- vitest --passWithNoTests --pool=forks",
    "test:ci": "dotenv -e ../../.env.test -- vitest run --passWithNoTests --pool=forks",
    "lint": "dotenv -v SKIP_ENV_VALIDATION=1 eslint ./",
    "format": "prettier --check . --ignore-path ../../.gitignore",
    "format:fix": "prettier --write . --ignore-path ../../.gitignore",
    "db:migrate:shadow": "dotenv -e ../../.env -- bash -c 'DATABASE_URL=$(echo \"$DATABASE_URL\" | sed \"s/\\(postgresq\\{0,1\\}l\\{0,1\\}:\\/\\/[^\\/]*\\/\\)[^?]*\\(.*\\)/\\1shadow\\2/\") prisma migrate dev'",
    "db:migrate:actual": "dotenv -e ../../.env prisma migrate dev",
    "db:migrate": "pnpm db:migrate:shadow && pnpm db:migrate:actual && pnpm db:generate",
    "db:generate": "prisma generate && tsx generate.ts && pnpm lint -- --fix && pnpm format:fix",
    "db:deploy": "prisma migrate deploy",
    "db:push": "prisma db push --skip-generate",
    "db:seed": "dotenv -e ../../.env prisma db seed",
    "db:reset": "prisma migrate reset",
    "clean": "git clean -xdf .turbo node_modules build"
  },
  "prettier": "@isomer/prettier-config",
  "dependencies": {
    "@opengovsg/isomer-components": "workspace:*",
    "dotenv-cli": "^7.3.0",
    "kysely": "^0.27.3",
    "pg": "^8.12.0",
    "prisma-kysely": "^1.8.0",
    "ts-essentials": "^9.4.0"
  },
  "devDependencies": {
    "@isomer/env": "workspace:*",
    "@isomer/eslint-config": "workspace:*",
    "@isomer/prettier-config": "workspace:*",
    "@isomer/tsconfig": "workspace:*",
    "@paralleldrive/cuid2": "^2.2.2",
    "@prisma/client": "5.15.1",
    "@types/pg": "^8.11.6",
    "eslint": "^9.6.0",
    "prisma": "5.15.1",
    "prisma-dbml-generator": "^0.10.0",
    "prisma-json-types-generator": "^3.0.4",
    "superjson": "^2.2.1",
    "testcontainers": "^10.2.1",
    "tsx": "^4.16.0",
    "vite": "^5.3.2",
    "vitest": "^1.3.1",
    "zod": "^3.22.4"
  },
  "prisma": {
    "seed": "tsx prisma/seed.ts"
  }
}
