{
  "name": "isomer-base-template",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "PORT=3001 next",
    "build:local": "rm -rf .next && curl https://raw.githubusercontent.com/opengovsg/isomer/main/tooling/build/scripts/preBuild.sh | bash && npm run build",
    "build:template": "node --stack_size=10240 ./node_modules/next/dist/bin/next build",
    "analyze:schema": "tsx scripts/analyze-schema.ts",
    "build:transform": "npm run build:transform:renderLayout && npm run build:transform:renderComponent",
    "build:transform:renderLayout": "jscodeshift -t scripts/transforms/renderLayout.js node_modules/@opengovsg/isomer-components/dist/esm/templates/next/render/renderLayout.js",
    "build:transform:renderComponent": "jscodeshift -t scripts/transforms/renderComponent.js node_modules/@opengovsg/isomer-components/dist/esm/templates/next/render/renderComponent.js",
    "start": "next start",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "format": "prettier --check . --ignore-path ../../.gitignore",
    "format:fix": "prettier --write . --ignore-path ../../.gitignore",
    "typecheck": "tsc --noEmit",
    "clean": "git clean -xdf .next .turbo node_modules out"
  },
  "overrides": {
    "@next/swc-darwin-arm64": "15.2.3",
    "@next/swc-darwin-x64": "15.2.3",
    "@next/swc-linux-arm64-gnu": "15.2.3",
    "@next/swc-linux-arm64-musl": "15.2.3",
    "@next/swc-linux-x64-gnu": "15.2.3",
    "@next/swc-linux-x64-musl": "15.2.3",
    "@next/swc-win32-arm64-msvc": "15.2.3",
    "@next/swc-win32-x64-msvc": "15.2.3"
  },
  "dependencies": {
    "@opengovsg/isomer-components": "*",
    "next": "^15.2.3",
    "postcss": "^8.4.39",
    "postcss-preset-env": "^10.0.8",
    "tailwindcss": "^3.4.4",
    "typescript": "^5.9.2"
  },
  "devDependencies": {
    "@isomer/eslint-config": "*",
    "@isomer/prettier-config": "*",
    "@isomer/tsconfig": "*",
    "@types/node": "^22.15.21",
    "jscodeshift": "^17.3.0",
    "tsx": "^4.20.4"
  },
  "prettier": "@isomer/prettier-config"
}
